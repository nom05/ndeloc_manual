\newcommand\nota[1]{
	\begin{tcolorbox}[
			colframe=black,
			colback=yellow!30!white,
			colupper=red!30!black,
			fonttitle=\bfseries,
			center title]
		#1
	\end{tcolorbox}
}

\newcommand\comando[1]{
	\begin{tcolorbox}[
			colback=blue!75!black,
			colframe=blue!75!black,
			fontupper=\bfseries,
			colupper=blue!5!white,
			size=small
					]
		{\footnotesize $\rhd$ #1}
	\end{tcolorbox}
}

